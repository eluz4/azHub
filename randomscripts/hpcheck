-- THIS IS MAINLY FOR THE AOT:R "DEATHS DOOR" ACHIEVEMENT
-- BUT YOU CAN USE IT AND TWEAK IT FOR WHATEVER YOU WANT

local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local player = Players.LocalPlayer
local plrname = player.Name
local char = workspace:WaitForChild("Characters"):WaitForChild(plrname)
local humanoid = char:WaitForChild("Humanoid")

local function updateNotification()
    local hp = humanoid.Health
    local maxhp = humanoid.MaxHealth
    local percentHP = (hp / maxhp) * 100
    local notificationText = string.format("You're at %.1f%% HP", percentHP)
    
    StarterGui:SetCore("SendNotification", {
        Title = "HP",
        Text = notificationText,
        Duration = 50, 
    })
end

humanoid:GetPropertyChangedSignal("Health"):Connect(updateNotification)

updateNotification()
