    end,
})

DesertTab:CreateToggle({
    Name = "Gem Farm",
    CurrentValue = false,
    Callback = function(Value)
        G.Desert.gem2 = Value
    end,
})

local TeleportsTab = Window:CreateTab("Teleports", 4483345998)

TeleportsTab:CreateButton({
    Name = "Desert World Prompt",
    Callback = function()
        rootPart.CFrame = workspace.areaCircles:GetChildren()[22].circleInner.CFrame
    end,
})

local EggTab = Window:CreateTab("Eggs", 4483345998)

EggTab:CreateToggle({
    Name = "Open Desert",
    CurrentValue = false,
    Callback = function(Value)
        G.Desert.OpenDesert = Value
    end,
})

local MiscTab = Window:CreateTab("Misc.", 4483345998)

MiscTab:CreateToggle({
    Name = "Auto Rebirth",
    CurrentValue = false,
    Callback = function(Value)
        G.Misc.autoRebirth = Value
    end,
})

MiscTab:CreateToggle({
    Name = "Auto Rings",
    CurrentValue = false,
    Callback = function(Value)
        G.Misc.ring1 = Value
    end,
})

MiscTab:CreateButton({
    Name = "Turtle Spy",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/ltseverydayyou/uuuuuuu/main/Turtle%20Spy.lua"))()
    end,
})

MiscTab:CreateButton({
    Name = "Infinite Yield",
    Callback = function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
    end,
})

Rayfield:Notify({
    Title = "Script Loaded",
    Content = "enjoy, @ me in tekkit if issues.",
    Duration = 5,
    Image = 4483345998,
})
